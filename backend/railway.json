# Backend Deployment Configuration for Railway/Render

# For Railway (railway.json)
{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "deno run --allow-net --allow-env --allow-read server/index.ts",
    "healthcheckPath": "/make-server-02adf113/health",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
